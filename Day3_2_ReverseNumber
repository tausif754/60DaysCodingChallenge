import java.util.Scanner;
class ReverseNumber {
    public static void main(String[] args) {
        int n, r;
        System.out.println("Enter any number");
        Scanner sc = new Scanner(System.in);
        n = sc.nextInt();
        while (n > 0) {
            r = n % 10;
            System.out.print(r + " ");
            n = n / 10;

        }
    }
}
Output:
Enter any number
123
3 2 1
