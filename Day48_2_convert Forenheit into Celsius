import java.util.Scanner;

public class ForenheitCelsiusTo {
    // Java Program to Convert Celsius into Fahrenheit
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter the celsius value: ");
        double fahrenheit = sc.nextDouble();

        // double celsius = 10.0, fahrenheit = 0.0;

        // fahrenheit = (celsius * 1.8) + 32; // formula for conversion
        double celsius = ((fahrenheit - 32) * 5) / 9;

        System.out.println(" value of temperature in celsius:" + celsius);
    }
}
