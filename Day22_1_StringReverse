public class StringReverse {
    public static void main(String[] args) {
        StringBuffer r1 = new StringBuffer("Tausif Ahmad");
        String r = "MANUU";
        System.out.println(r1.reverse());
        String r2 = " ";
        int l;
        l = r.length();
        for (int i = l - 1; i >= 0; i--) {
            r2 = r2 + r.charAt(i);

        }
        System.out.println("Reverse String " + r2);
    }

}
